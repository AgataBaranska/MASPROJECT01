<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PatientsController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Patients">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="textFieldPesel" focusTraversable="false" onKeyPressed="#filterListOnKeyPressed" promptText="Enter Pesel Number" />
            <ListView fx:id="listPatients" />
            <ButtonBar>
              <buttons>
                <Button mnemonicParsing="false" onAction="#btnAddNewPatientClicked" text="New Patient" />
                  <Button mnemonicParsing="false" onAction="#btnDeletePatientClicked" text="Delete Patient" />
                  <Button mnemonicParsing="false" onAction="#btnPatientsAppointmentsClicked" prefHeight="25.0" prefWidth="153.0" scaleShape="false" text="Patient's Appointments" />
              </buttons>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ButtonBar>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#btnQuitClicked" text="Quit" />
              </buttons>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
