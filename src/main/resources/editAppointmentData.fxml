<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditAppointmentDataController">
    <children>
        <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Create new appointment">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
                </Label>
                <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label contentDisplay="CENTER" text="Date" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets />
                            </GridPane.margin>
                        </Label>
                        <Label contentDisplay="CENTER" text="Optometrist">
                            <GridPane.margin>
                                <Insets />
                            </GridPane.margin>
                        </Label>
                  <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ComboBox fx:id="comboBoxOptometrists" prefHeight="25.0" prefWidth="250.0" GridPane.columnIndex="1" />
                  <Label text="Time" GridPane.rowIndex="2" />
                  <ComboBox fx:id="comboTimePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </GridPane>
                <ButtonBar>
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#btnSaveClicked" text="Save" />
                        <Button mnemonicParsing="false" onAction="#btnCancelClicked" text="Cancel" />
                    </buttons>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </ButtonBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
